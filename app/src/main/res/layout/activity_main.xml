<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:scaleType="fitCenter"
        android:src="@drawable/facebook1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="22dp"
        android:text="SIGN IN"
        android:textSize="30dp"
        app:bootstrapBrand="primary"
        app:layout_constraintBottom_toTopOf="@+id/editTxtFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editTxtFirstName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="2"
        android:hint="Enter Email or Phone"
        android:textColor="@color/black"
        android:textColorHint="@color/bootstrap_brand_info"
        app:bootstrapBrand="primary"
        app:bootstrapSize="md"
        android:text="nts@gmail.com"
        app:layout_constraintBottom_toTopOf="@+id/editTxtPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintVertical_bias="1.0"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/editTxtPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="255dp"
        android:layout_weight="2"
        android:inputType="textPassword"
        android:text="123456789"
        android:hint="Enter Password"
        android:textColor="@color/black"
        android:textColorHint="@color/bootstrap_brand_info"
        app:bootstrapBrand="primary"
        app:bootstrapSize="md"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintVertical_bias="0.0"
        app:roundedCorners="true" />


    <!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"/>-->

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnLogin"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="150dp"
        android:text="LOGIN"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtPassword"
        app:layout_constraintVertical_bias="1.0"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/awesomeTxtView"
        android:layout_width="269dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="64dp"
        android:text="If you don't have an accout,Please"
        app:layout_constraintEnd_toStartOf="@+id/txtSignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/txtSignup"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="43dp"
        android:gravity="left"
        android:text="SIGN UP"
        app:bootstrapBrand="primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/awesomeTxtView"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <CheckBox
        android:id="@+id/check_bock"
        android:layout_width="199dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:text="Nhớ đăng nhập"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>