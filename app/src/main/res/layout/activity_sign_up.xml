<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/facebook1" />
    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/txtSignUp"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="112dp"
        android:text="SIGN UP"
        android:textSize="30dp"
        app:bootstrapBrand="primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/editTxtFirstName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="2"
            android:hint="FristName"
            android:textColor="@color/black"
            android:textColorHint="@color/bootstrap_brand_info"
            app:bootstrapBrand="primary"
            app:bootstrapSize="md"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSignUp"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/editTxtLastName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="2"
            android:hint="FristName"
            android:textColor="@color/black"
            android:textColorHint="@color/bootstrap_brand_info"
            app:bootstrapBrand="primary"
            app:bootstrapSize="md"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTxtFirstName" android:layout_marginTop="24dp"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edtxtPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Phone"
            android:textColor="@color/black"
            android:textColorHint="@color/bootstrap_brand_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTxtLastName" android:layout_marginTop="24dp"
            android:inputType="number"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/editTxtpasswordSignup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/bootstrap_brand_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTxtEmail" android:layout_marginTop="24dp"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/editTxtEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="15dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:textColorHint="@color/bootstrap_brand_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtxtPhone" android:inputType="textEmailAddress"/>


    <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnSignUp"
            android:layout_width="158dp"
            android:layout_height="47dp"
            android:text="SIGN UP"
            app:bootstrapBrand="primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:roundedCorners="true" app:layout_constraintTop_toBottomOf="@+id/editTxtpasswordSignup"
            android:layout_marginTop="24dp"/>




    <!--    <com.ycuwq.datepicker.date.DatePicker-->
<!--        android:id="@+id/datePicker"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->
</androidx.constraintlayout.widget.ConstraintLayout>