<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/itSearch_avt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/sky"
        app:bootstrapBrand="primary"
        app:bootstrapSize="sm"
        app:hasBorder="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgInfor"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical"
        android:weightSum="12"
        app:layout_constraintStart_toEndOf="@+id/itSearch_avt"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/itSearch_txtName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:fontFamily="@font/roboto"
            android:paddingLeft="2dp"
            android:text="heelo"
            android:textColor="@color/bootstrap_gray_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itSearch_txtBC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:fontFamily="@font/roboto_thin"
            android:paddingLeft="2dp"
            android:text="2 người theo dõi"
            android:textColor="@color/bootstrap_gray_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>