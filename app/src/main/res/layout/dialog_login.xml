<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:background="#000275D8"
    android:layout_height="280dp"
    app:cardCornerRadius="10dp"
    android:outlineSpotShadowColor="#00D9534F"
    app:cardBackgroundColor="#0FCAC8"

    android:elevation="2dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top|center"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Đang tải tài nguyên"
        android:textColor="@color/bootstrap_gray_dark"
        android:textSize="29sp"
        android:textStyle="italic" />
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.RotatingCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="75dp"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/design_default_color_surface" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center"
        android:fontFamily="@font/roboto"
        android:textStyle="italic"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Sắn sàng hành lý cho những chuyến đi.."
        android:textColor="@color/bootstrap_gray_dark"
        android:textSize="16sp" />
</androidx.cardview.widget.CardView>